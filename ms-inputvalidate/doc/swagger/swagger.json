{
    "swagger": "2.0",
    "info": {
        "description": "This is a simple API for validating input data (zip code), forwarding it to the weather service and returning the weather for a given location.",
        "title": "Input Validation API",
        "contact": {
            "name": "Vitor Rodrigues",
            "url": "https://vsouza.rio.br/contact",
            "email": "me@vsouza.rio.br"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/license/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8000",
    "basePath": "/",
    "paths": {
        "/": {
            "get": {
                "description": "Exibe a saudação \"Enjoy the silence!\"",
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "Root"
                ],
                "summary": "Exibe uma saudação",
                "responses": {
                    "200": {
                        "description": "Enjoy the silence!",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Unable to write response",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "post": {
                "description": "Valida se o INPUT(CEP) contém 8 dígitos e encaminha para o serviço de clima se for válido.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Input"
                ],
                "summary": "Valida e encaminha um INPUT(CEP) para consulta de clima",
                "parameters": [
                    {
                        "description": "CEP",
                        "name": "cep",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/web.CepRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/domain.WeatherResponse"
                        }
                    },
                    "404": {
                        "description": "can not find zipcode",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "422": {
                        "description": "invalid zipcode",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/health": {
            "get": {
                "description": "Retorna informações sobre a saúde do serviço, como uso de CPU, memória e tempo de atividade",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Health"
                ],
                "summary": "Retorna informações sobre a saúde do serviço",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/health.HealthStats"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.WeatherResponse": {
            "type": "object",
            "properties": {
                "city": {
                    "type": "string"
                },
                "temp_C": {
                    "type": "number"
                },
                "temp_F": {
                    "type": "number"
                },
                "temp_K": {
                    "type": "number"
                }
            }
        },
        "health.CPUStats": {
            "type": "object",
            "properties": {
                "cores": {
                    "type": "integer"
                },
                "percent_used": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            }
        },
        "health.HealthStats": {
            "type": "object",
            "properties": {
                "cpu": {
                    "$ref": "#/definitions/health.CPUStats"
                },
                "duration": {
                    "type": "string"
                },
                "memory": {
                    "$ref": "#/definitions/health.MemoryStats"
                },
                "message": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "time": {
                    "type": "string"
                },
                "uptime": {
                    "type": "string"
                }
            }
        },
        "health.MemoryStats": {
            "type": "object",
            "properties": {
                "available": {
                    "type": "integer"
                },
                "free": {
                    "type": "integer"
                },
                "percent_used": {
                    "type": "number"
                },
                "total": {
                    "type": "integer"
                },
                "used": {
                    "type": "integer"
                }
            }
        },
        "web.CepRequest": {
            "type": "object",
            "properties": {
                "cep": {
                    "type": "string"
                }
            }
        }
    }
}